# Production Environment Configuration
# Copy this file to terraform.tfvars and update values

project_name        = "ssca-bc"
environment         = "prod"
location            = "centralus"  # Supported: westus2, centralus, eastus2, westeurope, eastasia
resource_group_name = "ssca-bc-website-rg"

# PostgreSQL - Shared Server Configuration
# Connection details for the shared PostgreSQL server
# Database must already exist on the shared server

postgres_host          = "your-shared-postgres-server.postgres.database.azure.com"
postgres_port          = 5432
postgres_database_name = "ssca"
# postgres_username = "your_username"  # Set via environment variable TF_VAR_postgres_username
# postgres_password = "your_password"  # Set via environment variable TF_VAR_postgres_password

# Storage
storage_account_tier     = "Standard"
storage_replication_type = "LRS"

# Static Web App
static_web_app_sku = "Free"  # Use "Standard" for production with custom domains
github_repo_url    = "https://github.com/HaoWang-SSCA/website"
github_branch      = "main"

# Tags
tags = {
  Project     = "SSCA-BC Website"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Owner       = "SSCA-BC"
}
